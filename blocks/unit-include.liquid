<div id="variantAdditionalInfoWrapper-{{ section.id }}">
  {%- assign init_variant = product.selected_or_first_available_variant -%}
  <div id="variantAdditionalInfo-{{ section.id }}">
    {{ init_variant.metafields.custom.unit_include }}
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const quantityInput = document.querySelector("input[name='quantity']");
    const minusBtn = document.querySelector("button[name='minus']");
    const plusBtn = document.querySelector("button[name='plus']");

    if (!quantityInput) return; // safety check

    function getQuantityValue() {
      console.log("Quantity:", quantityInput.value);
    }

    // Input typing works normally
    quantityInput.addEventListener("input", getQuantityValue);

    // +/- buttons: wait until Shopify updates value
    minusBtn?.addEventListener("click", () => setTimeout(getQuantityValue, 0));
    plusBtn?.addEventListener("click", () => setTimeout(getQuantityValue, 0));
  });
</script>

