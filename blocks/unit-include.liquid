<div id="variantAdditionalInfoWrapper-{{ section.id }}">
  {%- assign init_variant = product.selected_or_first_available_variant -%}
  <div id="variantAdditionalInfo-{{ section.id }}">
    {{ init_variant.metafields.custom.unit_include }}
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const quantitySelector = document.querySelector(".quantity-selector");
  const minusBtn = quantitySelector.querySelector("[name='minus']");
  const plusBtn = quantitySelector.querySelector("[name='plus']");
  const quantityInput = quantitySelector.querySelector("[name='quantity']");

  const logQuantity = () => console.log("Quantity:", quantityInput.value);

  minusBtn.addEventListener("click", logQuantity);
  plusBtn.addEventListener("click", logQuantity);
  quantityInput.addEventListener("input", logQuantity); // logs whenever user types
});
</script>

{% schema %}
{
  "name": "Unit Include",
  "settings": [],
  "presets": [
    {
      "category": "Custom Block",
      "name": "Unit Include"
    }
  ]
}
{% endschema %}
